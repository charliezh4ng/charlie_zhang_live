<%= form_with(model: post) do |form| %>
  <section class="flex flex-col max-w-8xl">
    <% if post.errors.any? %>
      <div class="mt-4 border-solid rounded bg-red-300 border-red-500 text-black">
        <h2 class="text-indigo"><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>
        <ul>
          <% post.errors.each do |error| %>
            <li class="text-red">- <%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- TODO: why does text-color not work for forms? -->
    <div class="mt-4">
      <%= form.label :title, class: "text-[#600000] text-lg block" %>
      <%= form.text_field :title, class: "mt-2 rounded-md" %>
    </div>

    <div class="mt-4">
      <%= form.label :content, "Content", class: "mb-2" %>
      <%= form.rich_text_area :content, class: "mt-2 rounded-md"%>
    </div>

    <!-- https://github.com/pat/gutentag/wiki/Examples#adding-to-a-form-view -->
    <div class="mt-4 flex flex-col">
      <%= form.label :tags_as_string, value: "Tags (comma separated)", class: "mb-2"%>
      <%= form.text_field :tags_as_string, id: :post_tags_as_string, class: "mt-2 rounded-md"%>
    </div>

    <div class="mt-4">
      <%= form.submit class: "my-2 inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 ml-0" %>
    </div>
  </section>
<% end %>
