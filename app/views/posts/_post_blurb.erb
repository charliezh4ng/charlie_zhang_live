<div class="mx-2">
  <p class="text-sm text-gray-500"><%= time_tag post.created_at, "data-local": "time-ago" %></p>
  <h4 class="text-xl font-semibold text-gray-900"><%= post.title %><h4>
  <p class="mt-3 text-base text-gray-700"><%= post.blurb 250 %></p>
  <div class="mt-3">
    <%= link_to "Read", post, class: "text-base font-semibold text-indigo-500 hover:text-indigo-900" %>
  </div> 
</div>