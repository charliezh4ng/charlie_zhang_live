<section id="<%= dom_id post %>" 
  class="py-16 xl:py-36 px-3 sm:px-6 lg:px-8 bg-white overflow-hidden">
  <div class="max-w-max lg:max-w-7xl">
    <div class="relative z-10 mb-8 md:mb-2 md:px-6">
      <div class="text-base max-w-prose lg:max-w-none">
        <h2 class="leading-6 text-indigo-600 font-semibold tracking-wide uppercase"><%= time_tag post.created_at, "data-local": "time-ago" %></h2>
        <p class="mt-2 text-3xl md:text-4xl leading-8 font-extrabold tracking-tight text-gray-900 "><%= post.title %></p>
        <%# if post.comments.count > 0 %>
          <%#<h2 class="mt-2 leading-6 text-indigo-600 font-semibold tracking-wide uppercase"><%= pluralize post.comments.count, "comment" %><%#</h2>
        <%# end %>
        <div class="flex space-x-4 mt-2" >
          <% post.tag_names.each do |tag| %>
            <div class="flex space-x-1.5">
              <!-- heroicons/tag -->
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
              </svg>
              <!-- how come tailwindcss does not work here? -->
              <!-- TODO: make a blogs/tags/ route and make these links -->
              <p style="margin-left: .2em;">
                <%= tag %>
              </p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="relative md:bg-white md:p-6">
    <div class="lg:grid lg:grid-cols-2 lg:gap-6 prose prose-indigo prose-lg text-gray-500 lg:max-w-none">
      <%= post.content %>
    </div>
  </div>
  <%= link_to "Back to posts", posts_path, class: "pt-5 md:p-6 text-base font-semibold text-indigo-500 hover:text-indigo-900" %>
</section>
