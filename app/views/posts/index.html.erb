<!-- show scroll-able posts -->
<section class="flex flex-col">
  
  <h1 class="mt-4 px-2 font-semibold text-2xl text-red-200">Posts</h1>

  <div id="posts" class="mt-6 pt-10 grid gap-16 lg:grid-cols-2 lg:gap-x-5 lg:gap-y-12">
    <% @posts.each do |post| %>
      <%= render "post_blurb", post: post %>
    <% end %>
  </div>
  <% if king_signed_in? %>
    <div class="flex flex-row-reverse">
      <%= link_to "New post", new_post_path, class: "mx-4 my-2 inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"%>
    </div>
  <% end %> 
</section>