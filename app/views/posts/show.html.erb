<%= turbo_stream_from @post %>

<section class="flex flex-col">
  <%= render @post %>
  <!-- TODO: make comments input look nice, comments should have a name, email, discord, twitter etc -->
  <%#= render "posts/comments", post: @post %>
  <div>
    <% if king_signed_in? %>
      <div class="px-1 flex justify-between">
        <%= link_to "Edit this post", edit_post_path(@post), class: "mx-4 my-2 inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <%= button_to "Destroy this post", @post, method: :delete, class: "mx-4 my-2 inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-red-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
      </div>
    <% end %>
  </div>
</section>